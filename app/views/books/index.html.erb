<p id="notice"><%= flash[:notice] %></p>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Show",book_path(book) %></td>
       <td><%= link_to "Edit",edit_book_path(book) %></td>
       <td><%= link_to "Destroy",book_path(book), method: :delete %></td>
     </tr>
     <% end %>
  </tbody>
</table>
 
<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: Book.new do |f| %>
 <h4>title</h4>
 <%= f.text_field :title %>
 
 <h4>body</h4>
 <%= f.text_area :body %>
 
 <%= f.submit 'Create Book' %>
 
<% end %>